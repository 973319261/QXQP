<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nv_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:itemBackground="@null"
        android:background="@drawable/bg_border_top"
        app:itemTextColor="@drawable/selector_main_bottom_navigation"
        app:itemIconTint="@drawable/selector_main_bottom_navigation"
        app:menu="@menu/nv_main_navigation">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>